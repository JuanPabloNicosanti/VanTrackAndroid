<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="utn.proy2k18.vantrack">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="initAndAccManagement.InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="initAndAccManagement.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="initAndAccManagement.InitActivity" />
        <activity
            android:name="initAndAccManagement.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:parentActivityName="initAndAccManagement.InitActivity" />
        <activity
            android:name="initAndAccManagement.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="initAndAccManagement.InitActivity" />
        <activity android:name="mainFunctionality.CentralActivity" />
        <activity
            android:name="utn.proy2k18.vantrack.mainFunctionality.localization.MapsActivity"
            android:label="@string/track_my_van"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>