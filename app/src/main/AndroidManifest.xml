<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="utn.proy2k18.vantrack">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".initAndAccManagment.InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".initAndAccManagment.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".initAndAccManagment.InitActivity" />
        <activity
            android:name=".initAndAccManagment.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:parentActivityName=".initAndAccManagment.InitActivity" />
        <activity
            android:name=".initAndAccManagment.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".initAndAccManagment.InitActivity" />
        <activity android:name=".mainFunctionality.CentralActivity" />
    </application>

</manifest>