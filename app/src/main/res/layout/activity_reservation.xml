<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mainFunctionality.reservations.ReservationActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="mainFunctionality.reservations.ReservationActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textColor="@color/colorButtonPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/route" />

        <LinearLayout
            android:id="@+id/stops_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:layout_marginStart="35dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/colorButtonPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/company" />

            <TextView
                android:id="@+id/reservation_fragment_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/mpsdk_black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/colorButtonPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/status" />

            <TextView
                android:id="@+id/reservation_fragment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/mpsdk_black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/colorButtonPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/hop_on_stop" />

            <Spinner
                android:id="@+id/hop_on_stop_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/mpsdk_black"
                android:textSize="20sp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/colorButtonPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/seats_qty" />

            <TextView
                android:id="@+id/seats_qty_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/mpsdk_black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/colorButtonPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/date" />

            <TextView
                android:id="@+id/reservation_fragment_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/mpsdk_black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/colorButtonPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/price" />

            <TextView
                android:id="@+id/reservation_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/mpsdk_black"
                android:textSize="20sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_map_booking"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/button_primary"
            android:text="@string/map_reservation"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pay_booking"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/button_primary"
            android:text="@string/pay_reservation"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cancel_booking"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/button_primary"
            android:text="@string/cancel_reservation"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_rate_booking"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/button_primary"
            android:text="@string/rate_reservation"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
